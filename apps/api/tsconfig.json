  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020"],

    /* Modules */
    "module": "commonjs",
    "rootDir": "src",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "outDir": "dist",

    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "typeRoots": ["./node_modules/@types", "./src/app/types"],
    "types": ["node"]
  },
  "include": ["src/**/*", "src/app/types/**/*.d.ts"],
  "exclude": ["node_modules"]
}
